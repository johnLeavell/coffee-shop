<div >
  <h5>
    Edit Employee Account
  </h5>

  <% if @employee.errors.any? %>
  <% @employee.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
  <% end %>
  <div>
    <form action="/modify_employee" method="post">
              
      <div>
        <label for="email_box">Email</label>
          
        <input id="email_box" name="query_email" value="<%= @current_employee.email %>">
          
      </div>
                                    
      <div>
        <label for="first_name_box">First name</label>
          
        <input id="first_name_box" name="query_first_name" value="<%= @current_employee.first_name %>">
          
      </div>
                      
      <div>
        <label for="last_name_box">Last name</label>
          
        <input id="last_name_box" name="query_last_name" value="<%= @current_employee.last_name %>">
          
      </div>
                      
      <div>
        <label for="avatar_box">Avatar</label>
          
        <input id="avatar_box" name="query_avatar" value="<%= @current_employee.avatar %>">
          
      </div>
                      
      <div>
        <label for="admin_box">Admin</label>
          
        <input id="admin_box" name="query_admin" type="checkbox" value="1" <%= "checked" if @current_employee.admin %>>
          
      </div>
              
      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a new password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your new password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
